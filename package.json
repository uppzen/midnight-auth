{
  "name": "@uppzen/midnight-auth",
  "version": "1.0.0",
  "description": "Modern authentication and wallet connection library for Midnight Network",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:js": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "concurrently \"npm run build:css -- --watch\" \"tsup src/index.ts --format cjs,esm --dts --watch\"",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "dependencies": {
    "lucide-react": "^0.454.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^9.38.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "next": "16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "1.0.7",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "midnight",
    "midnight-network",
    "wallet",
    "authentication",
    "lace",
    "web3",
    "blockchain",
    "react",
    "ui",
    "components",
    "typescript"
  ],
  "author": "Eclipse Labs",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/uppzen/midnight-auth.git"
  },
  "bugs": {
    "url": "https://github.com/uppzen/midnight-auth/issues"
  },
  "homepage": "https://github.com/uppzen/midnight-auth#readme"
}
